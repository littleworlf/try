<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.team.GroupMessageActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/group_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:popupTheme="@style/ToolbarPopupTheme"
            app:title="Gravity" />

        <LinearLayout
            android:layout_width="314dp"
            android:layout_height="500dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/boder"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                >

                <TextView
                    android:id="@+id/GroupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团队名称： "
                    android:textColor="@color/md_blue_grey_800"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/GroupNameMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火箭队"
                    android:textColor="@color/md_blue_grey_800"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                >

                <TextView
                    android:id="@+id/AssociatedEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关联赛事： "
                    android:textColor="@color/md_blue_grey_800"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/AssociatedEventMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NBA联赛"
                    android:textColor="@color/md_blue_grey_800"
                    android:textSize="30sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/TeamProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队简介： "
                android:textColor="@color/md_blue_grey_800"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TeamProfileMessage"
                android:layout_width="wrap_content"
                android:layout_height="233dp"
                android:text="     这是一支十分强大的篮球队伍，深受人们喜爱，曾经创造了非常多的辉煌"
                android:textColor="@color/md_blue_grey_800"
                android:textSize="30sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>